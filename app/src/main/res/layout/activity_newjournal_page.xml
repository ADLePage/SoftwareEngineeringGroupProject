<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".newjournalPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_layout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pagetitle"
            android:text="new journal page"
            android:textSize ="30dp"
            />


    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/saveButtonjournal"
        android:src ="@drawable/ic_baseline_done_outline_24"
        android:layout_alignParentEnd="true"

        />
        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_marginVertical="26dp"
        android:background="@color/white">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/journaltitletext"
            android:hint="TITLE"
            android:textStyle="bold"
            android:layout_marginVertical="8dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/journaltitledescription"
            android:hint="DESCRIPTION"
            android:gravity="top"
            android:minLines="15"
            android:textStyle="bold"
            android:layout_marginVertical="8dp"/>
    </LinearLayout>



</RelativeLayout>