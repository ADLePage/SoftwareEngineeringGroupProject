<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".newjournalPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_layout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pagetitle"
            android:text=" new journal ðŸ˜"

            android:textColor="@color/white"

            android:textStyle="bold"
            android:textSize ="30dp"

            />


    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/saveButtonjournal"

        android:layout_alignParentEnd="true"

        />
        </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_layout"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_marginVertical="26dp"
        android:background="@color/white">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/journaltitletext"
            android:hint="TITLE"
            android:textStyle="bold"
            android:layout_marginVertical="8dp"/>

        <EditText
            android:id="@+id/journaltitledescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:gravity="top"
            android:hint="DESCRIPTION"
            android:minLines="15"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/deletejournal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="166dp"
        android:gravity="center"
        android:visibility="gone"
        android:text="DELETE"
        android:textColor="#DF0D0D" />


</RelativeLayout>